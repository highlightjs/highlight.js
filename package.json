    "cli-table": "^0.3.1",
    "commander": "^10.0.1",
    "css": "^3.0.0",
    "css-color-names": "^1.0.1",
    "deep-freeze-es6": "^2.0.0",
    "del": "^6.1.1",
    "dependency-resolver": "^2.0.1",
    "eslint": "^8.39.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "glob": "^8.0.3",
    "glob-promise": "^6.0.2",
    "handlebars": "^4.7.6",
    "http-server": "^14.1.1",
    "jsdom": "^21.1.1",
    "lodash": "^4.17.20",
    "mocha": "^10.2.0",
    "refa": "^0.4.1",
    "rollup": "^2.47.0",
    "should": "^13.2.3",
    "terser": "^5.17.1",
    "tiny-worker": "^2.3.0",
    "typescript": "^5.0.4",
    "wcag-contrast": "^3.0.0"
